public class badonio2 {
    public static void main(String[] args) {
        int[] numbers = {3, 7, 1, 7, 4, 7, 6, 8, 7, 2}; // Example array
        int count = 0;

        for (int i = 0; i < numbers.length; i++) {
            if (numbers[i] == 7) {
                count++;
            }
        }

        System.out.println("The number 7 appears " + count + " times in the array.");
    }
}
